{
  "manifest_version": 3,
  "name": "ZenFocus New Tab",
  "version": "1.0.0",
  "description": "A minimalistic, customizable clock and timer for your new tab.",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://suggestqueries.google.com/*",
    "https://www.google.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://suggestqueries.google.com https://www.google.com"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}